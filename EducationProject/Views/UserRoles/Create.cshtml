@model string
@{
    ViewData["Title"] = "Create";
}


<section class="banner-area relative about-banner" id="home" style="height:300px">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center" style="height:200px">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Kullanıcı Rolü Oluştur

                </h1>
                <br />

            </div>
        </div>
    </div>
</section>

<div class="container" style="padding:5%;text-align:center">
    <br /><br /> <br /><br /> <br /><br />
    <form asp-action="Create">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label class="control-label">Kullanıcı Türü</label>
            <input name="Name" class="form-control" />

        </div>

        <div class="form-group">
            <input type="submit" value="Oluştur" class="btn btn-default" />
        </div>
    </form>
    <a asp-action="Index">Geri Dön</a>
    <br /><br /> <br /><br /> <br /><br /> <br /><br />
</div>




